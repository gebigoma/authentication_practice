<h1>Products#new</h1>

    <%= form_for @product do |f| %>  
      <div class="form-group">
        <%= f.label :title, 'Title*' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :category, 'Category*' %>
        <%= f.text_field :category, class: 'form-control' %>
      </div>

      <%= f.submit 'Create Product', class: 'btn btn-primary' %>
    <% end %>
